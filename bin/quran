#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    require_once(realpath(__DIR__ . '/../vendor/autoload.php'));
} else {
    require_once(realpath(__DIR__ . '/../../../autoload.php'));
}

use FaizShukri\Quran\Commands\QuranCommand;

$uri = implode(" ", array_slice($argv, 1));
$command = new QuranCommand($uri);
$command->execute();

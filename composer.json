{
  "name": "faizshukri/phpquran",
  "description": "Complete PHP Quran Resource",
  "license": "MIT",
  "keywords": [
    "quran",
    "al-quran",
    "muslim",
    "islam",
    "kitab",
    "phpquran"
  ],
  "authors": [
    {
      "name": "Faiz Shukri",
      "email": "faizshukri90@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "symfony/console": "^6.0|^5.0|^4.0|^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5|^6.5|^5.7"
  },
  "autoload": {
    "psr-4": {
      "FaizShukri\\Quran\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "bin": [
    "bin/quran"
  ],
  "extra": {
    "laravel": {
      "providers": [
        "FaizShukri\\Quran\\QuranServiceProvider"
      ],
      "aliases": {
        "Quran": "FaizShukri\\Quran\\Facades\\Quran"
      }
    }
  }
}